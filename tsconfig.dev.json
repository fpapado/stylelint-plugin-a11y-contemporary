{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    // Unambiguous syntax
    "verbatimModuleSyntax": true
  },
  "include": [
    // Needed to take care of any type merging for tests
    "vitest-setup.ts",
    "vitest.config.ts",
    "eslint.config.ts",
    "prettier.config.ts"
  ]
}
