{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    // Unambiguous syntax
    "verbatimModuleSyntax": true,

    "outDir": "dist/"
  },
  "include": [
    "src/**/*",
    // Needed to take care of any type merging for tests
    "vitest-setup.ts"
  ]
}
